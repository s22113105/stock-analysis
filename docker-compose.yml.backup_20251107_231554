version: '3.8'

services:
  # Laravel App
  app:
    build:
      context: .
      dockerfile: Dockerfile
    image: stock-analysis-app
    container_name: stock-analysis-app
    restart: unless-stopped
    working_dir: /var/www
    volumes:
      - ./:/var/www
      - ./docker/php/local.ini:/usr/local/etc/php/conf.d/local.ini
    networks:
      - stock-analysis-network
    depends_on:
      db:
        condition: service_healthy
      redis:
        condition: service_started

  # Nginx Service
  nginx:
    image: nginx:alpine
    container_name: stock-analysis-nginx
    restart: unless-stopped
    ports:
      - "8000:80"
    volumes:
      - ./:/var/www
      - ./docker/nginx/conf.d:/etc/nginx/conf.d
    networks:
      - stock-analysis-network
    depends_on:
      - app

  # MySQL Database
  db:
    image: mysql:8.0
    container_name: stock-analysis-mysql
    restart: unless-stopped
    ports:
      - "3307:3306"  # 改用 3307 避免與本機 MySQL 衝突
    environment:
      # Root 用戶密碼
      MYSQL_ROOT_PASSWORD: ${MYSQL_ROOT_PASSWORD:-rootpassword}
      # 建立的資料庫
      MYSQL_DATABASE: ${DB_DATABASE:-stock_analysis}
      # 建立的普通用戶 (不能是 root!)
      MYSQL_USER: ${DB_USERNAME:-laravel}
      MYSQL_PASSWORD: ${DB_PASSWORD:-secret}
    volumes:
      - dbdata:/var/lib/mysql
      - ./docker/mysql/my.cnf:/etc/mysql/my.cnf
    networks:
      - stock-analysis-network
    healthcheck:
      test: ["CMD", "mysqladmin", "ping", "-h", "localhost", "-u${DB_USERNAME:-laravel}", "-p${DB_PASSWORD:-secret}"]
      interval: 10s
      timeout: 5s
      retries: 5
      start_period: 30s
    command: --default-authentication-plugin=mysql_native_password

  # Redis
  redis:
    image: redis:alpine
    container_name: stock-analysis-redis
    restart: unless-stopped
    ports:
      - "6379:6379"
    command: redis-server --appendonly yes
    volumes:
      - redisdata:/data
    networks:
      - stock-analysis-network
    healthcheck:
      test: ["CMD", "redis-cli", "ping"]
      interval: 10s
      timeout: 3s
      retries: 3

  # Node.js for Vue
  node:
    image: node:18-alpine
    container_name: stock-analysis-node
    working_dir: /var/www
    volumes:
      - ./:/var/www
    ports:
      - "5173:5173"  # Vite dev server
    networks:
      - stock-analysis-network
    command: tail -f /dev/null

  # Queue Worker
  queue:
    image: stock-analysis-app
    container_name: stock-analysis-queue
    restart: unless-stopped
    working_dir: /var/www
    command: php artisan queue:work redis --sleep=3 --tries=3 --max-time=3600
    volumes:
      - ./:/var/www
    networks:
      - stock-analysis-network
    depends_on:
      - app
      - redis

  # Scheduler
  scheduler:
    image: stock-analysis-app
    container_name: stock-analysis-scheduler
    restart: unless-stopped
    working_dir: /var/www
    command: /bin/sh -c "while true; do php artisan schedule:run --verbose --no-interaction & sleep 60; done"
    volumes:
      - ./:/var/www
    networks:
      - stock-analysis-network
    depends_on:
      - app

  # phpMyAdmin
  phpmyadmin:
    image: phpmyadmin:latest
    container_name: stock-analysis-phpmyadmin
    restart: unless-stopped
    ports:
      - "8080:80"
    environment:
      PMA_HOST: db
      PMA_PORT: 3306
      PMA_USER: ${DB_USERNAME:-laravel}
      PMA_PASSWORD: ${DB_PASSWORD:-secret}
      # 允許使用 root 登入
      PMA_ARBITRARY: 1
    networks:
      - stock-analysis-network
    depends_on:
      db:
        condition: service_healthy

networks:
  stock-analysis-network:
    driver: bridge

volumes:
  dbdata:
    driver: local
  redisdata:
    driver: local